<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BallsListActivity"
>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="92dp"
            tools:layout_editor_absoluteX="58dp"
            android:id="@+id/balls_list"
            android:padding="20dp">
        <TextView
                android:text="@string/page_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/header2"
                app:fontFamily="@font/actor"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                style="@style/TextAppearance.AppCompat.Body2"
                android:background="@color/teal_700"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textAllCaps="true"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
        />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>